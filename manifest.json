{
  "description": "Record HTTP request response pairs on chosen sites",
  "manifest_version": 2,
  "name": "Web tracker",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "web-tracker@freetom.me",
      "strict_min_version": "53.0"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "<all_urls>",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],

  "browser_action": {
    "default_title": "Record requests",
    "default_popup": "popup/popup.html",
    "browser_style": true
  }
}
